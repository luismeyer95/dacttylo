    "version": "0.2.0",
    "configurations": [
        {
            "name": "(OSX) Launch",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceRoot}/target/debug/dacttylo",
            "args": ["join", "luis", "-u", "eric"],
            "cwd": "${workspaceRoot}",
            "internalConsoleOptions": "neverOpen",
            "console": "integratedTerminal"
        },

        {
            "name": "Dacttylo Join",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceRoot}/target/debug/dacttylo",
            "args": ["join", "luis", "-u", "eric"],
            "cwd": "${workspaceRoot}",
            "internalConsoleOptions": "neverOpen",
            "console": "integratedTerminal"
        },

        {
            "name": "Dacttylo Host",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceRoot}/target/debug/dacttylo",
            "args": ["host", "-u", "luis", "-f", "textfiles/basic.txt"],
            "cwd": "${workspaceRoot}",
            "internalConsoleOptions": "neverOpen",
            "console": "integratedTerminal"
        }
    ]
}
