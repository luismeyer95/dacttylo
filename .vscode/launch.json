    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'ttypebox'",
            "cargo": {
                "args": ["build", "--bin=ttypebox", "--package=ttypebox"],
                "filter": {
                    "name": "ttypebox",
                    "kind": "bin"
                }
            },
            "args": ["src/line_stylizer.rs"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnFirstSessionStart"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'ttypebox'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=ttypebox",
                    "--package=ttypebox"
                ],
                "filter": {
                    "name": "ttypebox",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}
