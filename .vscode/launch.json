    "version": "0.2.0",
    "configurations": [
        {
            "name": "Practice",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceRoot}/target/debug/dacttylo",
            "args": ["practice", "-f", "textfiles/poem.txt"],
            "cwd": "${workspaceRoot}",
            "internalConsoleOptions": "neverOpen",
            "console": "integratedTerminal"
        },

        {
            "name": "Join",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceRoot}/target/debug/dacttylo",
            "args": ["join", "luis", "-u", "eric"],
            "cwd": "${workspaceRoot}",
            "internalConsoleOptions": "neverOpen",
            "console": "integratedTerminal"
        },

        {
            "name": "Host",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceRoot}/target/debug/dacttylo",
            "args": ["host", "-u", "luis", "-f", "textfiles/basic.txt"],
            "cwd": "${workspaceRoot}",
            "internalConsoleOptions": "neverOpen",
            "console": "integratedTerminal"
        }
    ]
}
