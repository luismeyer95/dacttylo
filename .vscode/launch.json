{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "attach",
            "name": "Attach",
            "program": "${workspaceFolder}/target/debug/dacttylo"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug editor",
            "cargo": {
                "args": ["build", "--bin=dacttylo", "--package=dacttylo"],
                "filter": {
                    "name": "dacttylo",
                    "kind": "bin"
                }
            },
            "args": ["src/line_stylizer.rs"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnFirstSessionStart"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'dacttylo'",
            "cargo": {
                "args": ["build", "--bin=dacttylo", "--package=dacttylo"],
                "filter": {
                    "kind": "bin"
                }
            },
            "args": ["practice", "-f", "textfiles/gut.txt"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnFirstSessionStart"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'dacttylo'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=dacttylo",
                    "--package=dacttylo"
                ],
                "filter": {
                    "name": "dacttylo",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}
